<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ERRS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearance.MaterialComponents.MediumComponent.CardView" parent="">
        <item name="cornerSize">8dp</item>/
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ShapeAppearance.MaterialComponents.Button" parent="">
        <item name="materialThemeOverlay">@drawable/royal_blue_background</item>
    </style>
</resources>